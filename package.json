{
  "name": "fireguard-backend",
  "version": "1.0.0",
  "private": true,
  "description": "FireGuard middleware API (Express + Sequelize) para enrolar dispositivos y recibir lecturas. Vercel usa /api/index.js como handler.",
  "type": "commonjs",
  "main": "src/index.js",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon src/index.js",
    "db:migrate": "sequelize db:migrate",
    "db:migrate:undo": "sequelize db:migrate:undo",
    "db:seed": "sequelize db:seed:all",
    "db:seed:undo": "sequelize db:seed:undo:all"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dayjs": "^1.11.13",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "helmet": "^7.1.0",
    "joi": "^17.12.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.3",
    "pdfkit": "^0.15.0",
    "sequelize": "^6.37.7",
    "serverless-http": "^3.2.0",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.7",
    "sequelize-cli": "^6.6.3"
  },
  "keywords": [
    "express",
    "sequelize",
    "mysql",
    "vercel",
    "serverless",
    "swagger"
  ],
  "author": "Ricardo Argueta",
  "license": "MIT"
}
